{
    "version": 5,
    "cmakeMinimumRequired": { "major": 3, "minor": 21 },
    "configurePresets": [
      {
        "name": "default",
        "hidden": false,
        "displayName": "Default (vcpkg + Ninja if available)",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build",
        "cacheVariables": {
          "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
          "VCPKG_FEATURE_FLAGS": "manifests,versions",
          "VCPKG_APPLOCAL_DEPS": "ON",
          "CMAKE_CXX_STANDARD": "17"
        }
      },
      {
        "name": "vs2022",
        "displayName": "Visual Studio 2022 (Windows)",
        "generator": "Visual Studio 17 2022",
        "binaryDir": "${sourceDir}/build-vs",
        "cacheVariables": {
          "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
          "VCPKG_FEATURE_FLAGS": "manifests,versions",
          "VCPKG_APPLOCAL_DEPS": "ON",
          "CMAKE_CXX_STANDARD": "17"
        }
      }
    ],
    "buildPresets": [
      { "name": "default", "configurePreset": "default" },
      { "name": "vs2022",  "configurePreset": "vs2022" }
    ]
  }
  